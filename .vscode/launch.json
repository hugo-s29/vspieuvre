{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}"],
            "outFiles": ["${workspaceFolder}/dist/*.js"],
            "preLaunchTask": "npm: watch"
        },
        {
            "name": "Attach to Server",
            "type": "node",
            "request": "attach",
            "port": 6009,
            "restart": true,
            "timeout": 10000
        }
    ]
}
